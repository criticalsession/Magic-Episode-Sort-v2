<Window x:Class="Magic_Episode_Sort_v2.FirstTime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magic_Episode_Sort_v2"
        mc:Ignorable="d" Icon="/MESIcon.png"
        Title="Welcome to Magic Episode Sort" Height="283" Width="401" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock TextWrapping="Wrap" FontSize="14">
            Welcome to <Bold>Magic Episode Sort.</Bold>  <Image Source="/MESIcon.png" Width="16"></Image><LineBreak /><LineBreak />
            As this seems to be the first time you're running this software, you will now be redirected 
            to the <Italic>Preferences</Italic> window for setup. Remember you can always change these settings
            by going to <Italic>Edit > Preferences</Italic> on subsequent runs.</TextBlock>
        <Border Height="20"></Border>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">Magic Episode Sort and its developers do not condone piracy.</TextBlock>
        <Border Height="20"></Border>
        <Button Height="30" Cursor="Hand" Click="Button_Click">Continue</Button>
    </StackPanel>
</Window>
