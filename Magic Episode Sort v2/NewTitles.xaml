<Window x:Class="Magic_Episode_Sort_v2.NewTitles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magic_Episode_Sort_v2"
        mc:Ignorable="d"
        Title="Magic Episode Sort > New Series" Height="637" Width="484" Icon="/MESIcon.png"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="14" TextWrapping="Wrap">The following <Bold>New Series Titles</Bold> were found. To change the automatically generated titles, click on any in the list and enter a new title in the field provided below.</TextBlock>
        <ListView Grid.Row="1" Name="lstNewTitles" SelectionChanged="lstNewTitles_SelectionChanged"></ListView>

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBox Name="txtCustomTitle" VerticalAlignment="Center" Padding="5" Margin="0 0 5 0" Grid.Column="0" FontSize="14" IsEnabled="false"></TextBox>
            <Button Name="btnCustomTitle" Grid.Column="1" IsEnabled="false" FontSize="14" Cursor="Hand" Click="btnCustomTitle_Click">Save</Button>
        </Grid>
    </Grid>
</Window>
